<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<GridPane fx:controller="com.example.lab10.ClientController" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Message:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="messageField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Send" onAction="#handleSendButton" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Exit" onAction="#handleExitButton" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

</GridPane>